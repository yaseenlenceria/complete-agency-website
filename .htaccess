# Error Pages
ErrorDocument 404 /404.html
ErrorDocument 500 /404.html

# Disable directory browsing
Options -Indexes

# Protect sensitive files
<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files>

<Files ~ "\.log$">
    Order allow,deny
    Deny from all
</Files>
